# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.ApplicationCtrl.index()

GET     /login                      controllers.UserCtrl.login()
POST    /login                      controllers.UserCtrl.doLogin()
GET     /logout                     controllers.UserCtrl.logout()

GET     /course/:semester/:courseId                 controllers.CourseCtrl.index(semester: String, courseId: Long)
GET     /course/:semester/:courseId/syllabus        controllers.CourseCtrl.editSyllabus(semester: String, courseId: Long)
POST    /course/:semester/:courseId/syllabus        controllers.CourseCtrl.editSyllabusPost(semester: String, courseId: Long)

GET     /course/:semester/:courseId/manage          controllers.CourseCtrl.manageView(semester: String, courseId: Long)
POST    /course/:semester/:courseId/addTA           controllers.CourseCtrl.addTA(semester: String, courseId: Long)
POST    /course/:semester/:courseId/addTokenToTA    controllers.CourseCtrl.addTokenToTA(semester: String, courseId: Long)
#GET     /course/:semester/:courseId        controllers.CourseCtrlCtrl.index(semester: String, courseId: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET     /admin                      controllers.AdminCtrl.index()
GET     /admin/init                 controllers.AdminCtrl.loadEdu()
